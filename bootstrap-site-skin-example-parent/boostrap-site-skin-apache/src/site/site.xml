<project xmlns="http://maven.apache.org/DECORATION/1.8.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/DECORATION/1.8.0 http://maven.apache.org/xsd/decoration-1.8.0.xsd">

    <edit>${project.scm.url}</edit>

    <skin>
        <groupId>io.github.stevecrox.maven.skins</groupId>
        <artifactId>bootstrap-site-skin</artifactId>
        <version>${skin.version}</version>
    </skin>

    <bannerLeft>
        <href>https://github.com/stevecrox/maven-site-bootstrap-skin</href>
        <border>0</border>
        <width>340px</width>
        <height>86px</height>
        <src>image/example-banner-left.png</src>
    </bannerLeft>

    <bannerRight>
        <href>https://github.com/stevecrox/maven-site-bootstrap-skin</href>
        <border>0</border>
        <width>256px</width>
        <height>125px</height>
        <src>image/example-banner-right.png</src>
    </bannerRight>

    <poweredBy>
        <logo name="Apache" img="image/example-banner-right.png" alt="alternativeText" border="0" width="128px" height="62px" />
    </poweredBy>

    <custom>
        <bootstrapSkin>
            <gitHub>
                <organisation>stevecrox</organisation>
                <repository>maven-site-bootstrap-skin</repository>
            </gitHub>
            <navbar>
                <enabled>false</enabled>
                <menuOrientation>left</menuOrientation>
                <icon>
                    <href>./index.html</href>
                </icon>
            </navbar>
            <sidebar>
                <enabled>true</enabled>
            </sidebar>
        </bootstrapSkin>
    </custom>

    <body>
        <breadcrumbs>
            <item name="Maven Site Boostrap Skin"  href="https://github.com/stevecrox/maven-site-bootstrap-skin" />
            <item name="Test"  href="https://github.com/stevecrox/maven-site-bootstrap-skin" />
        </breadcrumbs>
        <menu name="Getting Started">
            <item name="Overview" href="./gettingStarted/index.html"/>
            <item name="Development" href="./development/index.html"/>
        </menu>
        <menu name="API">
            <item name="Banner Bar Configuration" href="./gettingStarted/bannerbar/index.html"/>
            <item name="Navbar Configuration" href="./gettingStarted/navbar/index.html"/>
            <item name="Project Info Bar Configuration" href="./gettingStarted/projectinfobar/index.html"/>
            <item name="Sidebar Configuration" href="./gettingStarted/sidebar.html"/>
            <item name="Footer Configuration" href="./gettingStarted/footer/index.html"/>
            <item name="Theming" href="./gettingStarted/theming.html"/>
        </menu>
        <menu name="Examples">
            <item name="Default Example" href="./bootstrap-site-skin/index.html"/>
            <item name="Apache Layout Example" href="./bootstrap-site-skin-example-parent/boostrap-site-skin-apache/index.html"/>
            <item name="Kitchen Sink Example" href="./bootstrap-site-skin-example-parent/boostrap-site-skin-all-options/index.html"/>
            <item name="MkDocs Example" href="./bootstrap-site-skin-example-parent/boostrap-site-skin-mkdocs/index.html"/>
        </menu>
        <menu ref="reports"/>
    </body>
</project>
